@import 'core/variables'
@import 'core/fonts'

button(pad = 0.8rem 1.2rem)
    display: inline-block
    border: none
    background-color: $teal-dark
    color: white
    cursor: pointer
    outline: none
    border-radius: 50px
    font-weight: 500
    font-family: $font-sans
    font-size: 1.1rem
    padding: pad
    letter-spacing: 0.05em
    transition: background-color $speed linear
    &:hover
        background-color: $teal-darker

grid-square(squares = 2)
    grid-column-end: span squares
    grid-row-end:    span squares
