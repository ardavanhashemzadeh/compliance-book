        - var formTarget = targetID
    else
        - var formTarget = 'hsFormContainer'
    div(id=formTarget)
    script.
        hbspt.forms.create({
        portalId: "1695915",
        formId: "f81d1947-0303-45d2-b02b-c441d33a0495",
        target: '##{formTarget}',
        onFormSubmit: function($form) {
            window.dataLayer = window.dataLayer || [];
            window.dataLayer.push({
